{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build docker",
			"type": "docker-build",
			"dockerBuild": {
				"context": "${workspaceFolder}",
				"dockerfile": "${workspaceFolder}/.devcontainer/Dockerfile",
				"tag": "${config:docker_image}"
			}
		},
		{
			"label": "Build beacon software",
			"type": "shell",
			"command": "docker run -v ${workspaceFolder}:/root/nrf5_sdk/examples/${workspaceFolderBasename} ${config:docker_image} make -C /root/nrf5_sdk/examples/${workspaceFolderBasename} build_dongle",
			"dependsOn": [
				"Build docker"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Build ESPAR software",
			"type": "shell",
			"command": "docker run -v ${workspaceFolder}:/root/nrf5_sdk/examples/${workspaceFolderBasename} ${config:docker_image} make -C /root/nrf5_sdk/examples/${workspaceFolderBasename} build_espar",
			"dependsOn": [
				"Build docker"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Build",
			"group": {
                "kind": "build",
                "isDefault": true
            },
			"dependsOn": ["Build ESPAR software", "Build beacon software"]
		  }
	]
}
